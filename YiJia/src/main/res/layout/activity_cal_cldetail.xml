<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yijia.myapplication.Cal_cldetailActivity">
    <LinearLayout
        style="@style/topstyle">
        <ImageView
            android:id="@+id/back"
           style="@style/detailtopback"
            android:onClick="backcalcuator"/>
        <TextView
            style="@style/detailtoptext"
            android:text="计算窗帘价格"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算出窗帘的价格为"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:paddingTop="20dp" />
        <TextView
            android:id="@+id/priceresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/textDown" />

    </LinearLayout>

</LinearLayout>
