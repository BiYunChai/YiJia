<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCollActivity">
    <!--top-->
    <LinearLayout
        style="@style/topstyle"
        android:padding="3dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:src="@mipmap/back"
            android:onClick="backme"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:text="我的收藏"/>
    </LinearLayout>
    <!--用户头像-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorPrimary">
    </LinearLayout>
    <!--收藏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/storeteam"
            style="@style/melinnear">
            <TextView
                style="@style/scoretext"
                android:text="装修团队"/>
        </LinearLayout>
        <LinearLayout
            style="@style/settingunderline"/>
        <LinearLayout
            android:id="@+id/storestyle"
            style="@style/melinnear">
            <TextView
                style="@style/scoretext"
                android:text="装修风格"/>
        </LinearLayout>
        <LinearLayout
            style="@style/settingunderline"/>
        <LinearLayout
            android:id="@+id/storematerial"
            style="@style/melinnear">
            <TextView
                style="@style/scoretext"
                android:text="装修建材"/>
        </LinearLayout>
        <LinearLayout
            style="@style/settingunderline"/>
        <LinearLayout
            android:id="@+id/storelike"
            style="@style/melinnear">
            <TextView
                style="@style/scoretext"
                android:text="收藏套图"/>
        </LinearLayout>
        <LinearLayout
            style="@style/settingunderline"/>

        <LinearLayout
            android:id="@+id/storepost"
            style="@style/melinnear">
            <TextView
                style="@style/scoretext"
                android:text="收藏帖子"/>
        </LinearLayout>
        <LinearLayout
            style="@style/settingunderline"/>

    </LinearLayout>
</LinearLayout>
