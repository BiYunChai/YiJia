<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/top"
        android:background="@color/topColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
       android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_gravity="center"
            android:onClick="back"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="130dp"
            android:textColor="@color/write"
            android:text="注 册"/>

    </LinearLayout>
        <!--注册信息-->

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <EditText
        android:id="@+id/cord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="输入验证码"/>
    <Button
        android:id="@+id/getcord"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取手机验证码"
        />
</RelativeLayout>


            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请设置密码"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp">
               <ImageView
                   android:id="@+id/tongyi"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@mipmap/confirm"/>
               <TextView
                   android:id="@+id/xieyi"
                   android:layout_toRightOf="@+id/tongyi"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我已阅读并且同意宜家的用户协议"
                   android:textSize="14sp"/>
           </RelativeLayout>

        <!--按钮以上距离  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            > </LinearLayout>

        <Button
            android:id="@+id/savecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/topColor"
            android:text="注  册"
            android:textSize="20sp"
            android:textColor="#ffffff" />
